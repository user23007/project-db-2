<%- include("../header"); %>
<div class="col-12">
    <h1>Editar usuario</h1>
    <form method="post" action="/usuarios/actualizar">

        <input value="<%= usuario.id %>" name="id" type="hidden">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= usuario.nombre %>" required id="nombre" placeholder="Nombre del usuario"
                class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input value="<%= usuario.email %>" required id="email" placeholder="Email del usuario"
                class="form-control" type="text" name="email">
        </div>
        <div class="form-group">
            <label for="genero">Genero</label>
            <input value="<%= usuario.genero %>" required id="genero" placeholder="Genero del amigue"
                class="form-control" type="text" name="genero">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/views/usuarios/ver.ejs" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>