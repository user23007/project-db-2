<%- include("../header"); %>
<div class="col-12">
    <h1>Agregar usuario</h1>
    <form method="post" action="/usuarios/insertar">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombre" placeholder="Username" class="form-control" type="text"
                name="nombre">
        </div>
        <div class="form-group">
            <label for="precio">Email</label>
            <input required id="email" placeholder="Email del usuario" class="form-control" type="text"
                name="email">
        </div>
        <div class="form-group">
            <label for="precio">Genero</label>
            <input required id="genero" placeholder="Genero del amigue" class="form-control" type="text"
                name="genero">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/views/usuarios/ver.ejs" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>